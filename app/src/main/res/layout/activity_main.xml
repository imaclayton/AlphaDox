<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcbackground"
    android:visibility="visible"
    tools:context="e.immanuelclayton.alphadox.MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="145dp"
        android:layout_height="127dp"
        android:layout_marginBottom="304dp"
        android:layout_marginEnd="109dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/button1"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginBottom="223dp"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/counter_shape"
        android:backgroundTint="@android:color/transparent"
        android:text="AlphaDox "
        android:textAppearance="@style/TextAppearance.Compat.Notification.Line2"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:targetApi="lollipop"
        tools:ignore="HardcodedText" />

</android.support.constraint.ConstraintLayout>
